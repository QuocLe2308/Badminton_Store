@page
@model WebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div class="brand-logo">
                            
                        </div>
                        <h4>Hello! let's get started</h4>
                        <h6 class="font-weight-light">Sign in to continue.</h6>
                        <form class="pt-3" id="account" method="post">
                            <div class="form-group">
                                <input type="email" class="form-control form-control-lg rounded" placeholder="Username" 
                                       asp-for="Input.Email">
                                <span asp-validation-for="Input.Email" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control form-control-lg rounded" id="exampleInputPassword1"
                                    placeholder="Password" asp-for="Input.Password">
                                <span asp-validation-for="Input.Password" class="text-danger"></span>

                            </div>
                            <div class="mt-3">
                                <button id="login-submit"
                                    class="btn btn-block btn-gradient-danger btn-lg font-weight-medium auth-form-btn"
                                    type="submit">SIGN IN</button>
                            </div>
                            <div class=" mt-3 font-weight-light">
                                <a href="/Account/ForgetPassword" class="auth-link text-black">Forgot password?</a>
                            </div>
                           
                            <div class=" mt-3 font-weight-light">
                                Don't have an account? <a href="~/Account/Register" class="text-danger">Create</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
