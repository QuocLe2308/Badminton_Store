@page
@model WebApp.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../../assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../../assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="../../../assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="../../../assets/vendors/font-awesome/css/font-awesome.min.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../../assets/css/vertical-light/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../../assets/images/favicon.png" />

    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
</head>
<body>
    <div class="container-scroller ">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow border">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3 border">
                           
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Join us today! It takes only few steps</h6>

                            <form class="" id="account" method="post">
                                <div id="input-form">
                                    <!-- Form fields -->
                                    <div class="form-group">
                                        <label>First Name</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="text" asp-for="Input.FirstName" class="form-control form-control-sm border-left-0" placeholder="First Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Last Name</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="text" asp-for="Input.LastName" class="form-control form-control-sm border-left-0" placeholder="Last Name">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-email-outline text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="email" asp-for="Input.Email" class="form-control form-control-sm border-left-0" placeholder="name@example.com">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Phone</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-cellphone-iphone text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="text" asp-for="Input.Phone" class="form-control form-control-sm border-left-0" placeholder="Phone">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Address</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-water text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="text" asp-for="Input.Address" class="form-control form-control-sm border-left-0" placeholder="Address">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>City</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-city text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="text" asp-for="Input.City" class="form-control form-control-sm border-left-0" placeholder="City">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Country</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-web text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="text" asp-for="Input.Country" class="form-control form-control-sm border-left-0" placeholder="Country">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Username</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-account-outline text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="text" asp-for="Input.Username" class="form-control form-control-sm border-left-0" placeholder="Username">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Password</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-lock-outline text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="password" asp-for="Input.Password" class="form-control form-control-sm border-left-0" id="exampleInputPassword" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label>Confirm Password</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend bg-transparent">
                                                <span class="input-group-text bg-transparent border-right-0">
                                                    <i class="mdi mdi-lock-outline text-danger"></i>
                                                </span>
                                            </div>
                                            <input type="password" asp-for="Input.ConfirmPassword" class="form-control form-control-sm border-left-0" id="exampleInputPassword" placeholder="Confirm Password">
                                        </div>
                                    </div>
                                    <div id="register-buttons" class="mt-3 d-grid gap-2">
                                        <button class="btn btn-block btn-gradient-danger btn-lg font-weight-medium auth-form-btn" id="register-submit" type="button">SIGN UP</button>
                                    </div>

                                    <div class="text-center mt-4 font-weight-light">
                                        Already have an account? <a href="~/Account/Login" class="text-danger">Login</a>
                                    </div>
                                </div>
                                <div id="otp-container">
                                    <div id="otp-form" style="display: none;">
                                        <hr />
                                        <h2>Verify OTP</h2>
                                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                        <div class="form-group">
                                            <label>Enter OTP</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend bg-transparent">
                                                    <span class="input-group-text bg-transparent border-right-0">
                                                        <i class="mdi mdi-account-outline text-primary"></i>
                                                    </span>
                                                </div>
                                                <input type="text" asp-for="Input.OTP" class="form-control form-control-sm border-left-0" placeholder="Enter OTP">
                                            </div>
                                        </div>
                                        <div>
                                            <button id="otp-submit" type="button" class="w-100 btn btn-lg btn-primary">Verify OTP</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../../assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../../assets/js/off-canvas.js"></script>
    <script src="../../../assets/js/hoverable-collapse.js"></script>
    <script src="../../../assets/js/misc.js"></script>
    <script src="../../../assets/js/settings.js"></script>
    <script src="../../../assets/js/todolist.js"></script>
    <!-- endinject -->
    <!-- SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#register-submit').click(function () {
                $.ajax({
                    url: '/Account/Register?handler=SendOTP',
                    type: 'POST',
                    data: $('#account').serialize(),
                    dataType: 'json', // Expect JSON response
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'OTP Sent',
                                text: 'Please check your email for the OTP.',
                            });
                            $('#input-form').hide();
                            $('#otp-form').show();
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message,
                            });
                            console.error('Error sending OTP:', response.message);
                        }
                    },
                    error: function (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error sending OTP. Please try again later.',
                        });
                        console.error('Error sending OTP:', error);
                    }
                });
            });

            $('#otp-submit').click(function () {
                $.ajax({
                    url: '/Account/Register?handler=ConfirmOTP',
                    type: 'POST',
                    data: $('#account').serialize(),
                    dataType: 'json', // Expect JSON response
                    success: function (response) {
                        if (response.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Registration Complete',
                                text: 'Your account has been successfully created. Redirecting to login page...',
                                timer: 3000,
                                showConfirmButton: false
                            }).then(() => {
                                window.location.href = '/Account/Login';
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message,
                            });
                            console.error('Error confirming OTP:', response.message);
                        }
                    },
                    error: function (error) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error confirming OTP. Please try again later.',
                        });
                        console.error('Error confirming OTP:', error);
                    }
                });
            });
        });
    </script>
}
